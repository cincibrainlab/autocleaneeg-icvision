<div class="h-screen bg-gray-900 text-white flex flex-col" data-controller="rating resume-link" data-rating-component-id-value="<%= @component.id %>" data-rating-start-time-value="<%= (Time.now.to_f * 1000).to_i %>" data-turbo-temporary>
  <!-- Header with progress and experience badge -->
  <header class="flex-shrink-0 bg-gray-800 border-b border-gray-700">
    <div class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
      <!-- Progress -->
      <div class="flex items-center space-x-4">
        <span class="text-sm text-gray-400">
          <%= @progress[:completed] %> / <%= @progress[:total] %>
        </span>
        <div class="w-32 h-2 bg-gray-700 rounded-full overflow-hidden">
          <div class="h-full bg-blue-500 transition-all duration-300" style="width: <%= @progress[:percentage] %>%"></div>
        </div>
        <span class="text-sm text-gray-400"><%= @progress[:percentage] %>%</span>
      </div>

      <!-- App Title -->
      <div class="flex items-center space-x-2">
        <span class="text-xl font-bold text-blue-400">ICVision</span>
        <span class="text-xl text-gray-400">Rater</span>
      </div>

      <!-- Resume Link & Experience Badge -->
      <div class="flex items-center space-x-4">
        <!-- Resume/Return Link Button -->
        <div class="relative">
          <button
            type="button"
            class="flex items-center space-x-2 px-3 py-1.5 bg-gray-700 hover:bg-gray-600 rounded-full transition-colors text-sm"
            data-action="click->resume-link#toggle"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path>
            </svg>
            <span>Return Link</span>
          </button>

          <!-- Dropdown with QR code and URL -->
          <div
            class="absolute right-0 mt-2 w-72 bg-gray-800 rounded-lg shadow-xl border border-gray-700 hidden z-50 p-4"
            data-resume-link-target="dropdown"
          >
            <h3 class="text-sm font-semibold text-white mb-2">Your Return Link</h3>
            <p class="text-xs text-gray-400 mb-3">Bookmark or scan to resume later</p>

            <!-- QR Code -->
            <div class="flex justify-center mb-3 bg-gray-900 rounded-lg p-3">
              <%= qr_code_svg(@resume_url, size: 120) %>
            </div>

            <!-- URL display -->
            <div class="bg-gray-900 rounded p-2 mb-3">
              <code class="text-xs text-blue-400 break-all"><%= @resume_url %></code>
            </div>

            <!-- Copy button -->
            <button
              type="button"
              class="w-full py-2 px-3 bg-blue-600 hover:bg-blue-500 rounded text-sm font-medium transition-colors"
              data-action="click->resume-link#copy"
              data-resume-link-url-value="<%= @resume_url %>"
            >
              Copy Link
            </button>
          </div>
        </div>

        <!-- Experience Badge -->
        <div id="experience-badge" class="relative">
          <%= render partial: "shared/experience_badge", locals: { participant: current_participant } %>
        </div>
      </div>
    </div>
  </header>

  <!-- Main content - centered image -->
  <main class="flex-1 flex items-center justify-center p-4 overflow-hidden min-h-0">
    <div class="w-full max-w-5xl flex items-center justify-center">
      <% if @component.image_path.present? %>
        <%= image_tag @component.image_path, class: "max-w-full max-h-full object-contain", alt: "Component #{@component.ic_index}" %>
      <% else %>
        <div class="text-center text-gray-500 py-20">No image available</div>
      <% end %>
    </div>
  </main>

  <!-- Rating buttons (fixed at bottom) -->
  <footer class="flex-shrink-0 bg-gray-800 border-t border-gray-700">
    <!-- Error display -->
    <div id="error" class="mx-auto max-w-4xl px-4"></div>

    <div class="max-w-4xl mx-auto px-4 py-4">
      <!-- Main category buttons -->
      <div class="grid grid-cols-7 gap-2 mb-3">
        <% Component::LABELS.each_with_index do |label, index| %>
          <button
            type="button"
            class="rating-btn flex flex-col items-center justify-center py-3 px-2 rounded-lg bg-gray-700 hover:bg-gray-600 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500"
            data-action="click->rating#submit"
            data-rating-label-param="<%= label %>"
          >
            <span class="text-2xl font-bold"><%= index + 1 %></span>
            <span class="text-xs mt-1 capitalize"><%= label.gsub('_', ' ') %></span>
            <span class="text-xs text-gray-400"><%= label[0].upcase %></span>
          </button>
        <% end %>
      </div>

      <!-- Secondary actions -->
      <div class="flex justify-center space-x-4 text-sm">
        <button
          type="button"
          class="flex items-center space-x-2 px-4 py-2 rounded bg-gray-700 hover:bg-gray-600 transition-colors"
          data-action="click->rating#flag"
        >
          <span>?</span>
          <span>Flag for review</span>
        </button>

        <button
          type="button"
          class="flex items-center space-x-2 px-4 py-2 rounded bg-gray-700 hover:bg-gray-600 transition-colors"
          data-action="click->rating#undo"
        >
          <span>&larr;</span>
          <span>Undo last</span>
        </button>
      </div>

      <!-- Keyboard shortcuts hint -->
      <div class="mt-3 text-center text-xs text-gray-500">
        Press <kbd class="px-1 py-0.5 bg-gray-700 rounded">1-7</kbd> or first letter to rate &bull;
        <kbd class="px-1 py-0.5 bg-gray-700 rounded">?</kbd> flag &bull;
        <kbd class="px-1 py-0.5 bg-gray-700 rounded">&larr;</kbd> undo
      </div>
    </div>
  </footer>

  <!-- Hidden form for submission -->
  <%= form_with url: ratings_path, method: :post, id: "rating-form", data: { turbo: true } do |f| %>
    <%= hidden_field_tag "rating[human_label]", "", id: "rating-label" %>
    <%= hidden_field_tag "rating[flagged]", "false", id: "rating-flagged" %>
    <%= hidden_field_tag "response_time_ms", "", id: "response-time" %>
  <% end %>
</div>
